<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/listview_deco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:scaleType="center"
        android:src="@drawable/listview_deco" />

    <ImageView
        android:id="@+id/listview_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="40dp"
        android:layout_toRightOf="@+id/listview_deco"
        android:scaleType="center"
        android:src="@drawable/listview_content" />

    <TextView
        android:id="@+id/listview_topic_text"
        fontPath="fonts/msyhbd.ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="36dp"
        android:layout_marginTop="44dp"
        android:layout_toEndOf="@+id/listview_deco"
        android:maxWidth="250dp"
        android:text="@string/topic"
        android:textColor="#ffffff"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/listview_time_text"
        fontPath="fonts/msyhbd.ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/listview_topic_text"
        android:layout_below="@+id/listview_topic_text"
        android:layout_marginTop="10dp"
        android:text="@string/time"
        android:textColor="#ffffff"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/listview_topic_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/listview_topic_text"
        android:layout_toRightOf="@+id/listview_topic_text"
        android:paddingLeft="20dp"
        android:textAppearance="@style/TextAppearance.CustomTitle1"
        android:textColor="#ffffff"
        android:textSize="21sp" />

    <TextView
        android:id="@+id/listview_time_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/listview_time_text"
        android:layout_toRightOf="@+id/listview_time_text"
        android:paddingLeft="20dp"
        android:textColor="#ffffff"
        android:textSize="21sp" />

    <TextView
        android:id="@+id/listview_content_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/listview_time_text"
        android:layout_below="@+id/listview_time_text"
        android:layout_marginTop="19dp"
        android:maxWidth="250dp"
        android:textAppearance="@style/TextAppearance.CustomContent"
        android:textColor="@color/textColor"
        android:textSize="21sp" />

</RelativeLayout>